{
    "family": "my-api-task",
    "containerDefinitions": [
        {
            "name": "<CONTAINER_NAME>",
            "image": "<IMAGE>",
            "portMappings": [
                {
                    "containerPort": 3000
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/<TASK_NAME>",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "environment": [
                { "name": "NODE_ENV", "value": "production" },
                { "name": "NO_COLOR", "value": "1" }
            ]
	}
    ],
    "executionRoleArn": "<TASK_ROLE>",
    "networkMode": "awsvpc",
    "volumes": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072"
}
